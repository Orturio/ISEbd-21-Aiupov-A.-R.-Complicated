<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" throwExceptions="true">
    <targets>
      <target name="logfileWarn" xsi:type="File" fileName="C://Logs//ComplicatedFile.txt" layout="${uppercase:${level}} | ${logger} | ${message} | ${date:format=dd.MM.yyyy}" />
      <target name ="logfileInfo" xsi:type="File" fileName="C://Logs//ComplicatedFile.txt" />
      <target name="email" xsi:type = "Mail" html="true" subject="Error Received" body="${message}" layout="${message}"
        to="specialForLabsArturAiupov2020@gmail.com"
        from="specialForLabsArturAiupov2020@gmail.com"  
        enableSsl="true"
        smtpUsername="specialForLabsArturAiupov2020@gmail.com"
        smtpPassword="Aiupov2012"
        smtpAuthentication="Basic"
        smtpServer="smtp.gmail.com"
        deliveryMethod ="Network"
        smtpPort="587"/>
    </targets>
    <rules>
      <logger name="*" level="Info" writeTo="logfileInfo" />
      <logger name="*" level="Warn" writeTo="logfileWarn" />
      <logger name="*" level="Error" writeTo="logfileWarn" />
      <logger name="*" level="Fatal" writeTo="email" />
    </rules>
  </nlog>
</configuration>
